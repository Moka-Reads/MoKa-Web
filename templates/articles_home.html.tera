<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Russo+One&display=swap">
        {% include "favicon" %}
        {% include "analytics" %}
    <title>MoKa Reads | Articles</title>
    <meta name="description" content="An Opensource Education Platform">
    {% include "style" %}
</head>


<body>

    <header>
        <h1 style="font-family: 'Russo One', sans-serif;">MoKa Reads Articles</h1>
    </header>

    {% include "nav" %}

    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search articles or tags...">
    </div>


    <div class="article-container">
        {% for article in articles%}

        <div class="article">
            <i class="icon-container {{article.metadata.icon}}"></i>

            <div class="title"><a class="link" href="/articles/{{article.slug}}">{{ article.metadata.title }} by {{article.metadata.author}}</a></div>
            <div class="description">Description: {{article.metadata.description}}</div>
            <div class="publish-date">Published on {{article.metadata.date}}</div>
            <div class="tags">Tags: {{article.metadata.tags}}</div>
        </div>
        {%endfor%}
    </div>
    <script>
        const searchInput = document.getElementById('searchInput');
        const articles = document.querySelectorAll('.article');

        searchInput.addEventListener('input', function () {
            const searchText = this.value.toLowerCase();

            articles.forEach(article => {
                const title = article.querySelector('.title a').innerText.toLowerCase();
                const tags = article.querySelector('.tags').innerText.toLowerCase();

                if (title.includes(searchText) || tags.includes(searchText)) {
                    article.style.display = 'block';
                } else {
                    article.style.display = 'none';
                }
            });
        });

    </script>

    {%
    include "footer"
    %}

</body>

</html>